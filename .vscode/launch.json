  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch People Management Module",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/people/main.go",
      "env": {
        "MODE": "dev",
        "ROOT_DIR": "${workspaceFolder}"
      }
    },
    {
      "name": "Launch Auth Module",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/auth/main.go",
      "env": {
        "MODE": "dev",
        "ROOT_DIR": "${workspaceFolder}",
        "ADMIN_EMAIL": "admin@iespik.org",
        "ADMIN_PASSWORD": "iesadmin"
      }
    },
    {
      "name": "Launch Monolith Module",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/main.go",
      "env": {
        "MODE": "dev",
        "ROOT_DIR": "${workspaceFolder}",
        "ADMIN_EMAIL": "admin@iespik.org",
        "ADMIN_PASSWORD": "iesadmin"
      }
    }
  ]
}
